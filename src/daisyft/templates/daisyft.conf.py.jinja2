{# Configuration file template for daisyft projects #}
{% set binary_metadata = binary_metadata if binary_metadata is defined else None %}

from pathlib import Path
from datetime import datetime
from daisyft.utils.config import ProjectConfig, BinaryMetadata, ComponentMetadata
import sys

# Note: After changing settings like port/host/live, run 'daisyft sync' 
# to update your main.py with the new values

config = ProjectConfig(
    style="{{ style }}",
    theme="{{ theme }}",
    app_path=Path("{{ app_path }}"),
    host="{{ host }}",
    port={{ port }},
    live={{ live }},
    include_icons={{ include_icons }},
    verbose={{ verbose }},
    paths={
        "components": Path("{{ paths.components }}"),
        "ui": Path("{{ paths.ui }}"),
        "static": Path("{{ paths.static }}"),
        "css": Path("{{ paths.css }}"),
        "js": Path("{{ paths.js }}"),
        "icons": Path("{{ paths.icons }}"),
    },
    binary_metadata=(
        BinaryMetadata(
            version="{{ binary_metadata.version }}",
            path=Path({{ binary_metadata.path.as_posix()|tojson }})
        )
        if binary_metadata and binary_metadata.path.exists()
        else None
    ),
    components={
        {% for name, comp in components.items() %}
        "{{ name }}": ComponentMetadata(
            name="{{ comp.name }}",
            type="{{ comp.type }}",
            path=Path("{{ comp.path }}")
        ),
        {% endfor %}
    }
) 