{# Configuration file template for daisyft projects #}

from pathlib import Path
from datetime import datetime
from daisyft.utils.config import ProjectConfig, BinaryMetadata, ComponentMetadata
import sys
from dataclasses import dataclass

# Note: After changing settings like port/host/live, run 'daisyft sync' 
# to update your main.py with the new values

config = ProjectConfig(
    style="{{ config.style }}",
    theme="{{ config.theme }}",
    app_path=Path("{{ config.app_path }}"),
    include_icons={{ 'True' if config.include_icons else 'False' }},
    verbose={{ 'True' if config.verbose else 'False' }},
    host="{{ config.host }}",
    port={{ config.port }},
    live={{ 'True' if config.live else 'False' }},
    paths={
        {% for key, path in config.paths.items() %}
        "{{ key }}": Path("{{ path }}"),
        {% endfor %}
    },
    binary_metadata=BinaryMetadata(
        version="{{ config.binary_metadata.version }}"
    ),
    components={
        {% for name, comp in config.components.items() %}
        "{{ name }}": ComponentMetadata(
            name="{{ comp.name }}",
            type="{{ comp.type }}",
            path=Path("{{ comp.path }}")
        ),
        {% endfor %}
    }
) 